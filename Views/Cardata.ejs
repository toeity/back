		<main class="main">
			<div class="card">
				<h2>
					<ion-icon name="settings-outline" class="icon"></ion-icon>จัดการข้อมูลรถ
				</h2>


				<div ng-app="app" style="padding:15px;">
					<div ng-controller="MainController">
						<div class="row form-group">

							<div class="col-md-3">
								<label for="filter">ค้นหา</label>
								<input ng-model="fdata.$" class="form-control" type="text" name="pname" id="pname"
									placeholder="ค้นหา" />
							</div>
							<div class="col-md-2">
								<label for="filter">ทะเบียนรถ</label>
								<input ng-model="fdata.car_reg" class="form-control" type="text" name="pname" id="pname"
									placeholder="ทะเบียนรถ" />
							</div>
							<div class="col-md-2">
								<label for="filter">หมายเลขรถ</label>
								<input ng-model="fdata.car_no" class="form-control" type="text" name="code" id="car_no"
									placeholder="หมายเลขรถ" />
							</div>

							<div>
								<a style="width: 80px; height: 32px; margin-top: 25px;"
									href="http://localhost:5001/Addcar" role="button" class="btn btn-primary">
									<ion-icon name="add-circle-outline" class="icon"></ion-icon>เพิ่ม
								</a>
							</div>

						</div>
						<!-- Data List .. ojo .. <table class="table gridtable table-condensed table-striped"> -->
						<table class="table hoverTable table-condensed table-striped" id="diagnosis_list">
							<tr>


								<th>ทะเบียนรถ</th>
								<th>หมายเลขรถ</th>
								<th>จำนวนที่นั่ง</th>
								<th>คนขับรถ</th>
								<th>ครูประจำรถ</th>
								<th>จัดการ</th>
							</tr>
							<tr
								ng-repeat="property in properties | filter: fdata | orderBy:column:reverseSort | limitTo: limit">
								<td>{{ property.car_reg }}</td>
								<td>{{ property.car_no }}</td>
								<td>{{ property.car_seat }}</td>
								<td>{{ property.driver.user_fname || "-"}} {{property.driver.user_lname}}</td>
								<td>{{ property.teacher.user_fname || "-"}} {{property.teacher.user_fname}}</td>
								<!-- <td>{{ property.user_fname " " property.user_lname }}</td>
				<td>{{ property.car_no }}</td> -->

								<td>
									<a style="width: 40px; height: 30px"
										href="http://localhost:5001/Viewcar/{{property.car_no}}" role="button"
										class="btn btn-info">
										<ion-icon name="eye-outline"></ion-icon>
									</a>
									<a style="width: 40px; height: 30px"
										href="http://localhost:5001/Editcar/{{property.car_no}}" role="button"
										class="btn btn-warning">
										<ion-icon name="create-outline"></ion-icon>
									</a>
									<a style="width: 40px; height: 30px" ng-click="deleteCar(property.car_no)"
										role="button" class="btn btn-danger">
										<ion-icon name="trash-outline"></ion-icon>
									</a>
									<form hidden="true" action="/delete-car" method="POST"
										id="del-{{property.car_no}}">
										<input type="submit" />
										<input type="hidden" name="car_no" value="{{property.car_no}}" />
									</form>
								</td>
								</td>
							</tr>
						</table>

						<!-- <a style="width: 80px; height: 30px"  href="http://localhost:5001/Addcar" role="button" class="btn btn-primary"><ion-icon name="add-circle-outline"  class="icon"></ion-icon>เพิ่ม</a> -->
		</main>
